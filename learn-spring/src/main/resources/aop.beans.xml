<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 配置被代理的对象 -->
    <bean id="myService" class="com.aop.MyService">
        <property name="name" value="郑剑峰" />
    </bean>
    <!-- 配置前置通知 -->
    <bean id="myMethodBeforeAdvice" class="com.aop.MyMethodBeforeAdvice" />
    <!-- 配置后置通知 -->
    <bean id="myAfterReturningAdvice" class="com.aop.MyAfterReturningAdvice" />
    <!-- 配置后置通知 -->
    <bean id="myMethodInterceptorAdvice" class="com.aop.MyMethodInterceptorAdvice" />
    <!-- 配置代理 -->
    <bean id="proxyFactoryBean" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces">
            <list>
                <value>com.aop.ServiceInterface</value>
                <value>com.aop.ServiceInterface2</value>
            </list>
        </property>
        <property name="interceptorNames">
            <list>
                <value>myMethodBeforeAdvice</value>
                <value>myAfterReturningAdvice</value>
                <value>myMethodInterceptorAdvice</value>
            </list>
        </property>
        <property name="target" ref="myService"/>
    </bean>

</beans>